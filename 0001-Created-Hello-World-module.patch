diff --git a/Notes_on_Linux/Linux_Kernel_Mentorship_Program/Hello_worl_kernel_module/Makefile b/Notes_on_Linux/Linux_Kernel_Mentorship_Program/Hello_worl_kernel_module/Makefile
new file mode 100644
index 0000000..ad79773
--- /dev/null
+++ b/Notes_on_Linux/Linux_Kernel_Mentorship_Program/Hello_worl_kernel_module/Makefile
@@ -0,0 +1,9 @@
+obj-m += hello_world_module.o
+
+PWD := $(CURDIR)
+
+all:
+	 make -C /lib/modules/$(shell uname -r)/build M=$(PWD) modules
+
+clean:
+	make -C /lib/modules/$(shell uname -r)/build M=$(PWD) clean
diff --git a/Notes_on_Linux/Linux_Kernel_Mentorship_Program/Hello_worl_kernel_module/hello_world_module.c b/Notes_on_Linux/Linux_Kernel_Mentorship_Program/Hello_worl_kernel_module/hello_world_module.c
new file mode 100644
index 0000000..bb0f740
--- /dev/null
+++ b/Notes_on_Linux/Linux_Kernel_Mentorship_Program/Hello_worl_kernel_module/hello_world_module.c
@@ -0,0 +1,23 @@
+// SPDX-License-Identifier: GPL-2.0+
+
+#include <linux/kernel.h>
+#include <linux/module.h>
+
+static int __init hello_init(void)
+{
+    pr_info("Hello World!\n");
+    return 0;
+}
+
+static void __exit hello_exit(void)
+{
+    pr_info("Bye World!\n");
+}
+
+module_init(hello_init);
+module_exit(hello_exit);
+
+
+MODULE_LICENSE("GPL");
+MODULE_AUTHOR("Sergio Gonzalez Collado");
+MODULE_DESCRIPTION("Simple Hello World! module");
